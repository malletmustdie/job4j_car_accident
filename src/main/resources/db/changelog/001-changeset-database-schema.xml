<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="create-authorities-table" author="elias">
        <createTable tableName="authorities">
            <column autoIncrement="true" name="id" type="serial">
                <constraints primaryKey="true"/>
            </column>
            <column name="authority" type="VARCHAR(50)"/>
        </createTable>
    </changeSet>
    <changeSet id="create-users-table" author="elias">
        <createTable tableName="users">
            <column autoIncrement="true" name="id" type="serial">
                <constraints primaryKey="true"/>
            </column>
            <column name="password" type="VARCHAR(255)"/>
            <column name="username" type="VARCHAR(255)">
                <constraints unique="true"/>
            </column>
            <column name="enabled" type="boolean"/>
            <column name="authority_id" type="integer">
                <constraints nullable="false" foreignKeyName="fk_users_authorities" references="authorities(id)"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="create-types-table" author="elias">
        <createTable tableName="types">
            <column autoIncrement="true" name="id" type="serial">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(50)"/>
        </createTable>
    </changeSet>
    <changeSet id="create-rules-table" author="elias">
        <createTable tableName="rules">
            <column autoIncrement="true" name="id" type="serial">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(50)"/>
        </createTable>
    </changeSet>
    <changeSet id="create-accidents-table" author="elias">
        <createTable tableName="accidents">
            <column autoIncrement="true" name="id" type="serial">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="text" type="VARCHAR(255)"/>
            <column name="address" type="VARCHAR(255)"/>
            <column name="accident_type_id" type="integer">
                <constraints nullable="false" foreignKeyName="fk_accidents_types" references="types(id)"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="create-accident_rule-table" author="elias">
        <createTable tableName="accident_rule">
            <column autoIncrement="true" name="id" type="serial">
                <constraints primaryKey="true"/>
            </column>
            <column name="accident_id" type="integer">
                <constraints nullable="false" foreignKeyName="fk_accident_rule_accidents" references="accidents(id)"/>
            </column>
            <column name="rule_id" type="integer">
                <constraints nullable="false" foreignKeyName="fk_accident_rule_rules" references="rules(id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>